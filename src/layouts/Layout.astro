---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.navigation
	{
		display: flex;
		gap:2rem;
	}
	.navigation p
	{
		font-size:16px;
	}
	.navigation img{
		width: 20px;
		height: 20px;
		color: white;
	}
	.navigation a{
		text-decoration: none;
		/* color: #18181B; */
		font-weight: 500;
	}
	.p1 img {
		border-radius:1.5rem;
		
	}
	.p1
	{	padding: 0px;
		border:none;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
		margin: none;
	}
	.p1 p>img
	{	
		width:fit-content;
		height: fit-content;
	}
	.p3 p>img{
		width: 300px;
		height: 300px;
		border-radius: 50%;
	}
	.p3 p>img:hover{

	}
	/* .p4 .align-row{
		display: flex;
		flex-direction: row;
	} */
	.p4 .bg-col-bw{
		width: 80%;
		justify-content: center;
		align-items: center;
		background-color:#23262d;;
	}
	.p4 .align-row .week-seb{
		width: 20%;
	}
	.p4 .align-row .week-seb .col p{
		display: flex;
		flex-direction: column;
	}
	.p3 p,.p3 {
		color: black;
	}
	.footer p,.footer center{
		align-items: center;
		justify-content: center;
		font-size: 20px;
		color: #676767;
	}
	.footer a{
		text-decoration:underline;
		text-underline-offset: 2px;
	}
</style>
