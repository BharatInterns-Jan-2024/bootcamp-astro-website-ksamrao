---
interface Props {
	title: string;
	body: string;
}

const { title, body } = Astro.props;
---

<li class="module">
		<h2>
			{title}
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	.module {
		list-style: none;
		display: flex;
        flex-direction: column;
		padding: 20px;
        border-color: #23262d;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		
	}
	h2 {
		margin: 0;
		font-size: 1.7rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
        font-size: 21px;
	}

</style>